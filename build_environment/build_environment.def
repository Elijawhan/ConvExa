Bootstrap: docker
From: ubuntu:22.04

%post
    # Set noninteractive frontend
    export DEBIAN_FRONTEND=noninteractive

    # Update and install basic tools
    apt-get update
    apt-get install -y \
        build-essential \
        git \
        vim \
        python3 \
        python3-dev \
        python3-pip \
        python3-venv \
        software-properties-common \
        ca-certificates \
        wget \
        curl \
        cmake \
        python-is-python3

    # Ensure pip is up to date
    python -m pip install --upgrade pip

    # Install Python libraries
    python -m pip install \
        matplotlib \
        numpy \
        pybind11 \
        scipy \
        pandas \
        h5py \
        scikit-learn \
        scikit-build-core \
        requests \
        Pillow \
        ipython \
        jupyter


%environment
    export PATH="/usr/local/bin:$PATH"
